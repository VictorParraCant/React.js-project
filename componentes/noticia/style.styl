.contenido
  padding: 10px
  border: solid 1px #cccccc
  border-radius: 5px

  img
    width: 100%
    height: auto
    border-radius: 5px

  .button
    width: 100%
    display: flex
    align-items: flex-end
    justify-content: space-around
    a
    .mas
      text-decoration: none
      color: #ffffff
      padding: 5px 10px
      background-color: #02869e
      border-radius: 5px
    .ver
      color: #333333
      background-color: transparent
      border-radius: 5px
      border: 1px solid #cccccc

  h3
    font-size: 20px
  .comment
    font-size: 12px
    text-align: left
    color: #333333
    font-weight: bold
  .autor
    font-size: 12px
    text-align: left
    color: #02869e
    font-weight: bold
