.contenido
  padding: 10px
  border: solid 1px #cccccc
  border-radius: 5px
  background-color: #ffffff

  img
    width: 100%
    height: auto
    border-radius: 5px

  .button
    width: 100%
    display: flex
    align-items: flex-end
    @media (max-width: 1126px)
      flex-direction: column
      align-items: flex-end

    .base
      text-decoration: none
      width: 48%
      margin: 1% auto
      border-radius: 5px
      padding: 5px
      text-align: center
      @media (max-width: 1126px)
        width: 90%
    .mas
      color: #ffffff
      background-color: #02869e
    .ver
      color: #333333
      background-color: transparent
      border: 1px solid #cccccc

  h3
    font-size: 20px
  .comment
    font-size: 12px
    text-align: left
    color: #333333
    font-weight: bold
  .autor
    font-size: 12px
    text-align: left
    color: #02869e
    font-weight: bold

.contenido:hover
  transition: all .2s
  box-shadow: 5px 5px 3px #cccccc
